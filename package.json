{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "t4t",
  "version": "0.1.0",
  "description": "Tools for Typescript general purpose utility library",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "node --require ts-node/register --test test/*.test.ts",
    "coverage": "node --require ts-node/register --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=lcov.info test/*.test.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "github:t4t4u/t4t"
  },
  "keywords": [
    "utilities",
    "tools",
    "utility",
    "tool"
  ],
  "author": "Jorin",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/t4t4u/t4t/issues"
  },
  "homepage": "https://github.com/t4t4u/t4t",
  "devDependencies": {
    "@types/node": "^18.7.15",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.14",
    "typescript": "^4.8.2"
  }
}
